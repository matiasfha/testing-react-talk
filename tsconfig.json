{
  "include": ["src"],
  "exclude": ["**/*.test.tsx"],
  "compilerOptions": {
    "allowJs": false,
    "skipLibCheck": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "allowUmdGlobalAccess": true,
    "outDir": "dist",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "Node",
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "types": ["vite/client","jest", "@testing-library/jest-dom"],
    "resolveJsonModule": true,
  }
}